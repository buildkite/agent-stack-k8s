{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "title": "Root Schema",
  "required": ["agentToken", "graphqlToken", "image", "config"],
  "properties": {
    "agentToken": {
      "type": "string",
      "default": "",
      "minLength": 0,
      "title": "The agentToken Schema",
      "examples": [""]
    },
    "graphqlToken": {
      "type": "string",
      "default": "",
      "minLength": 0,
      "title": "The graphqlToken Schema",
      "examples": [""]
    },
    "agentStackSecret": {
      "type": "string",
      "default": "",
      "minLength": 0,
      "title": "If an external secret is provided for the agent stack, set its name here",
      "examples": ["agent-stack-secret"]
    },
    "image": {
      "type": "string",
      "default": "ghcr.io/buildkite/agent-stack-k8s/controller:latest",
      "title": "The image for the agent-stack-k8s controller",
      "examples": ["ghcr.io/buildkite/agent-stack-k8s/controller:latest"]
    },
    "nodeSelector": {
      "type": "object",
      "default": {},
      "title": "The nodeSelector Schema",
      "examples": [
        {
          "kubernetes.io/arch": "amd64"
        }
      ]
    },
    "tolerations": {
      "type": "array",
      "default": [],
      "title": "The tolerations Schema",
      "examples": [
        {
          "key": "buildkite",
          "operator": "Equal",
          "value": "true",
          "effect": "NoSchedule"
        }
      ]
    },
    "labels": {
      "type": "object",
      "default": {},
      "title": "The labels Schema",
      "description": "label app is reserved, user input label app is not allowed",
      "not": { "required": ["app"] },
      "additionalProperties": {
        "type": "string",
        "default": ""
      },
      "example": [
        {
          "user": "name",
          "project": "project"
        }
      ]
    },
    "secretsMetadata": {
      "type": "object",
      "default": {},
      "title": "The secretsmetadata Schema",
      "description": "secret name and namespace are reserved, user input secret name and namespace are not allowed",
      "not": { "required": ["name", "namespace"] },
      "additionalProperties": {
        "type": "object",
        "default": {}
      },
      "example": [
        {
          "annotations": {
            "strategy.spinnaker.io/versioned": ""
          }
        }
      ]
    },
    "serviceAccountMetadata": {
      "type": "object",
      "default": {},
      "title": "The serviceaccountmetadata Schema",
      "description": "serviceaccount name and namespace are reserved, user input serviceaccount name and namespace are not allowed",
      "not": { "required": ["name", "namespace"] },
      "additionalProperties": {
        "type": "object",
        "default": {}
      },
      "example": [
        {
          "annotations": {
            "eks.amazonaws.com/role-arn": "my-service-role"
          }
        }
      ]
    },
    "resources": {
      "type": "object",
      "default": {},
      "title": "The resources Schema",
      "properties": {
        "requests": {
          "type": "object",
          "default": {},
          "title": "The requests Schema",
          "properties": {
            "cpu": {
              "type": ["string", "number"]
            },
            "memory": {
              "type": ["string", "number"]
            }
          }
        },
        "limits": {
          "type": "object",
          "default": {},
          "title": "The limits Schema",
          "properties": {
            "cpu": {
              "type": ["string", "number"]
            },
            "memory": {
              "type": ["string", "number"]
            }
          }
        }
      },
      "examples": [
        {
          "requests": {
            "cpu": "100m",
            "memory": "100Mi"
          },
          "limits": {
            "memory": "100Mi"
          }
        }
      ]
    },
    "config": {
      "type": "object",
      "default": {},
      "title": "The config Schema",
      "required": ["org"],
      "properties": {
        "image": {
          "type": "string",
          "default": "",
          "title": "The image Schema",
          "examples": [""]
        },
        "debug": {
          "type": "boolean",
          "default": false,
          "title": "The debug Schema",
          "examples": [false]
        },
        "job-ttl": {
          "type": "string",
          "default": "",
          "title": "The job-ttl Schema",
          "examples": [""]
        },
        "max-in-flight": {
          "type": "integer",
          "default": 0,
          "title": "The max-in-flight Schema",
          "examples": [100]
        },
        "poll-interval": {
          "type": "string",
          "default": "",
          "title": "The poll-interval Schema",
          "examples": ["1s", "1m"]
        },
        "org": {
          "type": "string",
          "default": "",
          "minLength": 1,
          "title": "The org Schema",
          "examples": [""]
        },
        "tags": {
          "type": "array",
          "default": [],
          "title": "The tags Schema",
          "items": {
            "type": "string"
          },
          "examples": [["queue=kubernetes"]]
        },
        "cluster-uuid": {
          "type": "string",
          "default": "",
          "title": "The UUID of the Buildkite cluster to pull Jobs from",
          "examples": [""]
        },
        "additional-redacted-vars": {
          "type": "array",
          "default": [],
          "title": "Additional environment variables to redact values from logs",
          "items": {
            "type": "string"
          },
          "examples": [["SECRET_RECIPE"]]
        },
        "pod-spec-patch": {
          "$ref": "https://kubernetesjsonschema.dev/master/_definitions.json#/definitions/io.k8s.api.core.v1.PodSpec"
        }
      },
      "examples": [
        {
          "image": "",
          "debug": false,
          "job-ttl": "5m",
          "max-in-flight": 100,
          "org": "",
          "tags": []
        }
      ]
    }
  },
  "examples": [
    {
      "agentToken": "",
      "graphqlToken": "",
      "image": "ghcr.io/buildkite/agent-stack-k8s/controller:latest",
      "nodeSelector": {},
      "config": {
        "agentImage": "",
        "debug": false,
        "jobTTL": "",
        "maxInFlight": 100,
        "pollInterval": "5s",
        "org": "",
        "tags": []
      }
    }
  ]
}
