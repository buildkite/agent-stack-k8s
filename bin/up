#!/usr/bin/env bash
set -euo pipefail
cd "$(dirname "$0")/.."
source bin/functions.sh

./bin/update

overlay=${1:-./k8s/buildkite}
context=${2:-kind-kind}

kubectx $context || {
  kind_create_cluster
}

k8s_apply_kustomize $context $overlay
k8s_wait_for_deployment $context kube-system metrics-server
k8s_wait_for_deployment $context buildkite buildscaler-apiserver

echo "Ready!"
